<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PasscodeActivity">

    <TextView
        android:id="@+id/passcode_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/passcode_label_margin"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/passcode_default"
        android:layout_gravity="center"
        android:gravity="center" />

    <EditText
        android:id="@+id/passcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/passcode_passfield_margin"
        android:editable="false"
        android:maxLines="1"
        android:singleLine="true"
        android:gravity="center"
        android:maxLength="4"
        android:password="true"
        android:textSize="32dp" />

    <TableLayout
        android:layout_marginTop="@dimen/passcode_passfield_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:layout_width="@dimen/passcode_default_margin"
                android:layout_height="@dimen/passcode_default_margin"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="1"
                android:onClick="onNumberClick"
                android:gravity="center" />

            <TextView
                android:layout_width="@dimen/passcode_default_margin"
                android:layout_height="@dimen/passcode_default_margin"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="2"
                android:onClick="onNumberClick"
                android:gravity="center" />

            <TextView
                android:layout_width="@dimen/passcode_default_margin"
                android:layout_height="@dimen/passcode_default_margin"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="3"
                android:onClick="onNumberClick"
                android:gravity="center" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:layout_width="@dimen/passcode_default_margin"
                android:layout_height="@dimen/passcode_default_margin"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="4"
                android:onClick="onNumberClick"
                android:gravity="center" />

            <TextView
                android:layout_width="@dimen/passcode_default_margin"
                android:layout_height="@dimen/passcode_default_margin"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="5"
                android:onClick="onNumberClick"
                android:gravity="center" />

            <TextView
                android:layout_width="@dimen/passcode_default_margin"
                android:layout_height="@dimen/passcode_default_margin"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="6"
                android:onClick="onNumberClick"
                android:gravity="center" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:layout_width="@dimen/passcode_default_margin"
                android:layout_height="@dimen/passcode_default_margin"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="7"
                android:onClick="onNumberClick"
                android:gravity="center" />

            <TextView
                android:layout_width="@dimen/passcode_default_margin"
                android:layout_height="@dimen/passcode_default_margin"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="8"
                android:onClick="onNumberClick"
                android:gravity="center" />

            <TextView
                android:layout_width="@dimen/passcode_default_margin"
                android:layout_height="@dimen/passcode_default_margin"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="9"
                android:onClick="onNumberClick"
                android:gravity="center" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <!--<TextView-->
                <!--android:id="@+id/passcode_logout_button"-->
                <!--android:layout_width="@dimen/passcode_default_margin"-->
                <!--android:layout_height="@dimen/passcode_default_margin"-->
                <!--android:textAppearance="?android:attr/textAppearanceLarge"-->
                <!--android:text="@string/logout"-->
                <!--android:gravity="center"-->
                <!--android:onClick="onButtonClick"-->
                <!--android:layout_column="0" />-->

            <ImageView
                android:id="@+id/passcode_logout_button"
                android:layout_width="@dimen/passcode_default_margin"
                android:layout_height="@dimen/passcode_default_margin"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:onClick="onImageClick"
                android:src="@drawable/ic_close_black_24dp"
                android:scaleType="center"
                android:layout_column="0" />

            <TextView
                android:layout_width="@dimen/passcode_default_margin"
                android:layout_height="@dimen/passcode_default_margin"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:gravity="center"
                android:onClick="onNumberClick"
                android:layout_column="1" />

            <!--<TextView-->
                <!--android:id="@+id/passcode_clear_button"-->
                <!--android:layout_width="@dimen/passcode_default_margin"-->
                <!--android:layout_height="@dimen/passcode_default_margin"-->
                <!--android:textAppearance="?android:attr/textAppearanceLarge"-->
                <!--android:text="@string/delete_char"-->
                <!--android:gravity="center"-->
                <!--android:onClick="onButtonClick"-->
                <!--android:layout_column="2" />-->
            <ImageView
                android:id="@+id/passcode_clear_button"
                android:layout_width="@dimen/passcode_default_margin"
                android:layout_height="@dimen/passcode_default_margin"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:scaleType="center"
                android:onClick="onImageClick"
                android:layout_column="2" />
        </TableRow>
    </TableLayout>

</LinearLayout>
