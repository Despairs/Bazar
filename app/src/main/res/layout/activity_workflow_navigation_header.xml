<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_header_height"
    tools:context=".action.workflow.WorkflowActivity"
    android:background="@color/primary_material_dark"
    android:orientation="vertical"
    android:paddingTop="@dimen/status_bar_height"
    android:gravity="bottom"
    android:paddingLeft="@dimen/navigation_header_margin"
    android:paddingBottom="@dimen/navigation_header_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:id="@+id/workflow_toolbar_header_name"
        android:text="default_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/workflow_toolbar_header_email"
        android:text="default_mail" />

</LinearLayout>
